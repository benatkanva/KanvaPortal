# Firebase Admin SDK Credentials
# Get these from: https://console.firebase.google.com/project/kanvaportal/settings/serviceaccounts/adminsdk

FIREBASE_PROJECT_ID=kanvaportal
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@kanvaportal.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Or use these alternative names:
# FIREBASE_ADMIN_PROJECT_ID=kanvaportal
# FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@kanvaportal.iam.gserviceaccount.com
# FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# JustCall API Credentials
# Get these from: JustCall Admin Panel → Settings → Integrations → API
JUSTCALL_API_KEY=your_justcall_api_key_here
JUSTCALL_API_SECRET=your_justcall_api_secret_here

# Google Cloud SQL PostgreSQL (for CRM data)
# Get these from: https://console.cloud.google.com/sql/instances
USE_SQL=false
CLOUD_SQL_HOST=127.0.0.1
CLOUD_SQL_PORT=5432
CLOUD_SQL_USER=postgres
CLOUD_SQL_PASSWORD=your_cloud_sql_password_here
CLOUD_SQL_DATABASE=crm
INSTANCE_CONNECTION_NAME=kanvaportal:us-central1:kanvaportal-crm-db

# Firebase Service Account (for migration script)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"kanvaportal",...}
